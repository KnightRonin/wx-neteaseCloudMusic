/* 背景处理 */

.play-list-bg {
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 50%;
    -webkit-filter: blur(20px);
    filter: blur(20px);
    -webkit-transform: scale(1.5);
    transform: scale(1.5);
}

.play-list-bg, .play-list-bg::after {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
}

.play-list-bg::after {
    content: '';
    background-color: rgba(0, 0, 0, 0.25);
}

/* 内容 */

